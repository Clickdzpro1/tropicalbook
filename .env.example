# TropicalParking - Environment Variables for Bolt Deployment
# Copy this file and configure with your actual values

# Server Configuration
PORT=5000
NODE_ENV=development

# Supabase Configuration (REQUIRED)
VITE_SUPABASE_URL=https://beyxjmkkwhyoorlvmxhg.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here
VITE_SUPABASE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# JWT Configuration (REQUIRED)
# Generate a secure secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_generated_jwt_secret_here
JWT_EXPIRE=7d

# Frontend URL (will be auto-detected in Bolt)
FRONTEND_URL=*

# Stripe Configuration (Optional - use test keys)
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_key

# Email Configuration (Optional - may not work in Bolt)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# reCAPTCHA Configuration (Optional)
RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# Cloudinary Configuration (Optional - may not work in Bolt)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
